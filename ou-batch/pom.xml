	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.rssoftware.ou</groupId>
		<artifactId>bbps-ou</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<artifactId>ou-batch</artifactId>
	<packaging>jar</packaging>
	<name>ou-batch</name>
	<properties>
		<java.version>1.8</java.version>
		<jxpath.version>1.3</jxpath.version>
		<spring-framework.version>4.1.7.RELEASE</spring-framework.version>
		<spring-integration.version>4.1.7.RELEASE</spring-integration.version>
		<spring-batch.version>3.0.4.RELEASE</spring-batch.version>
		<spymemcached.version>2.12.0</spymemcached.version>
		<build.number></build.number>
		<timestamp>${maven.build.timestamp}</timestamp>
		<maven.build.timestamp.format>dd-MM-yyyy HH:mm</maven.build.timestamp.format>
		<postgresql.version>9.4-1201-jdbc41</postgresql.version>
 		<oracle.version>12.1.0.1</oracle.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
